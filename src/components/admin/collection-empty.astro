<div class="empty-state">
  <div class="empty-state-content">
    <div class="empty-state-icon">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="64"
        height="64"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"
        ></path>
      </svg>
    </div>

    <h3 class="font-semibold text-foreground/80 text-2xl">No records found</h3>
    <p class="text-foreground/60 text-sm">
      Start by creating your first record
    </p>
  </div>
</div>

<style>
  .empty-state {
    padding: 4rem 2rem;
    text-align: center;
  }

  .empty-state-content {
    max-width: 400px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .empty-state-icon {
    width: 96px;
    height: 96px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
    border-radius: 50%;
    color: #9ca3af;
  }

  .empty-state-title {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 700;
    color: #111827;
  }

  .empty-state-description {
    margin: 0;
    font-size: 1rem;
    color: #6b7280;
    line-height: 1.6;
  }

  @media (max-width: 640px) {
    .empty-state {
      padding: 3rem 1rem;
    }

    .empty-state-icon {
      width: 80px;
      height: 80px;
    }

    .empty-state-icon svg {
      width: 48px;
      height: 48px;
    }

    .empty-state-title {
      font-size: 1.25rem;
    }

    .empty-state-description {
      font-size: 0.9375rem;
    }
  }
</style>
