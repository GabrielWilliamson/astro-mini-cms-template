---
// src/pages/admin/index.astro
import Layout from "@/layouts/admin/dashboard.astro";
import type { BaseCollection } from "@/types/collections";
import { collections } from "@/collections";

if (!Astro.locals.user) {
  return Astro.redirect("/auth/login");
}

const user = Astro.locals.user;

const collectionsList: BaseCollection[] = Object.entries(collections).map(
  ([key, value]) => ({
    ...value,
    slug: key,
  })
);
---

<Layout>
  <header class="mb-8">
    <h1 class="text-3xl font-bold tracking-tight text-foreground">Dashboard</h1>
    <p class="text-lg text-muted-foreground mt-2">
      Welcome <span class="font-medium text-foreground">{user.name}</span>!
    </p>
    <p class="text-base text-muted-foreground mt-1">
      You have access to the following collections:
    </p>
  </header>

  <section class="grid gap-4 sm:grid-cols-4 lg:grid-cols-5">
    {
      collectionsList.map((collection) => (
        <a
          title={collection.label}
          href={`/admin/collections/${collection.slug}`}
          class="group card transition focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary/30"
        >
          <header class="flex items-center justify-between">
            <h2 class="group-hover:underline">{collection.label}</h2>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-6 text-muted-foreground opacity-0  transition-all duration-300 group-hover:opacity-100 group-hover:text-primary"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25"
              />
            </svg>
          </header>
        </a>
      ))
    }
  </section>
</Layout>
